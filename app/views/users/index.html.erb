<% provide(:title, "All  Users")%>

<h1>All Users</h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
	<li>
		<%= gravatar_for user %>
		<%= link_to user.name, publichome_user_path(user) %>
		<% if current_user.admin? # && current_user?(user) %>
			<%= link_to "delete", user, method: :delete, confirm: "You Sure to Delete" %>
		<% end %>
	</li> 
	<% end %>
</ul>
<%= will_paginate%> 