<div class = "common_background"></div>
<% provide(:title, "Account Setting")%>
<h3>Update your Account Setting</h3>

<div class="row common_area">
	<div class="span6 offset3"> 
		<%= form_for(@user) do |f| %>
			<%= render 'error/error_messages', object: @user%> 
			
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			 
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation %>
		
			<%= f.submit "Save changes", class: "btn btn-large btn-primary btn_compose" %>
		<% end %>
		<!-- <%= gravatar_for @user %> -->
		<!-- <a href="http://gravatar.com/emails">change</a>  -->
	</div>
</div>